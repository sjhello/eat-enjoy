pipeline {
    agent any

    environment {
        PATH = "/usr/lib/gradle/bin:$PATH"
    }

    stages {

        stage('Deploy') {
            steps([$class: 'BapSshPromotionPublisherPlugin']) {
                sshPublisher(
                    continueOnError: false, failOnError: true,
                    publishers: [
                        sshPublisherDesc(
                            configName: "eatenjoy",
                            verbose: true,
                            transfers: [
                                sshTransfer(
                                    execCommand: "hostname >> /usr/local/tomcat/test2/test"
                                )
                            ]
                        )
                    ]
                )
            }
        }

    }
}
